<% content_for :header do -%>
  <%= javascript_include_tag "jquery-ui-1.8.5.custom.min" %>
  
  <script type="text/javascript">
    $(document).ready(function(){
       $("input.date").datepicker( {dateFormat: 'yy-mm-dd', firstDay: 1 });
    })
  </script>
<% end -%>
<%= form_for([@venue,@review], :url => (update_venue_review_path if @review.id)) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :review, 'Omdöme' %><br />
    <%= f.text_field :review %>
  </div>
  <div class="field">
    <%= f.label :other, 'Övrigt' %><br />
    <%= f.text_field :other %>
  </div>
  <div class="field">
    <%= f.label :rating, 'Betyg (1-5)' %><br />
    <%= select :review, :rating,(1..5).to_a %>
  </div>
  <div class="field">
    <%= f.label :author, 'Rapporterad av' %><br />
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :date, 'Testades den' %><br />
    <%= f.text_field :date, :class => "date" %>
  </div>
  <div class="actions">
    <%= f.submit 'Spara' %>
  </div>
<% end %>
