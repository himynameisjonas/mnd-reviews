<% content_for :header do -%>
    <script type="text/javascript"
        src="http://maps.google.com/maps/api/js?sensor=false">
    </script>
    <script type="text/javascript">
        $(document).ready(function() {
            initialize_index_map();
        });
    </script>
<% end -%>

<h1>Lunchställen</h1>
<div id="index_map_canvas"></div>
<table id="index_table">
  <tr>
    <th>Namn</th>
    <th>Adress</th>
    <th>Typ av mat</th>
    <th>Prisklass</th>
    <th>Snittbetyg</th>
    <th></th>
    <th></th>
  </tr>

<% @venues.each do |venue| %>
  <tr>
    <td class="nowrap url"><%= link_to venue.name, venue_url(venue) %></td>
    <td class="nowrap address"><%= venue.adress %></td>
    <td><%= venue.type_of_food %></td>
    <td><%= venue.price %></td>
    <td><%= number_with_precision(venue.average_rating, :precision => 1 ) %></td>
    <td class="nowrap"><%= link_to "#{pluralize(venue.total_ratings, "recension", "recensioner")}", venue, :class => "button" %></td>
    <td><%= link_to 'Redigera', edit_venue_path(venue), :class => "button" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nytt ställe', new_venue_path, :class => "button inline" %>
