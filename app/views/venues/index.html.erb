<h1>Lunchställen</h1>

<table>
  <tr>
    <th>Namn</th>
    <th>Adress</th>
    <th>Typ av mat</th>
    <th>Prisklass</th>
    <th>Genomsnittligt betyg (1-5)</th>
    <th>Antal recensioner</th>
    <th></th>
    <th></th>
  </tr>

<% @venues.each do |venue| %>
  <tr>
    <td class="nowrap"><%= link_to venue.name, venue %></td>
    <td class="nowrap"><%= venue.adress %></td>
    <td><%= venue.type_of_food %></td>
    <td><%= venue.price %></td>
    <td><%= number_with_precision(venue.average_rating, :precision => 1 ) %></td>
    <td><%= venue.total_ratings %></td>
    <td class="nowrap"><%= link_to 'Visa recensioner', venue %></td>
    <td><%= link_to 'Redigera', edit_venue_path(venue) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nytt ställe', new_venue_path %>
